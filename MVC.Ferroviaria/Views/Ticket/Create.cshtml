@model Modelos.Ferroviario.DTOS.CrearTicketDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Reservar Boleto</h1>

<h4>Seleccione sus datos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Clase" class="control-label"></label>
                <select asp-for="Clase" class="form-control" asp-items="ViewBag.Clase">
					<option value="">Seleccione una clase</option>

                </select>
                <span asp-validation-for="Clase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaPasajero" class="control-label"></label>
                <select asp-for="CategoriaPasajero" class="form-control" asp-items="ViewBag.CategoriaPasajero" >
					<option value="">Seleccione una categoria</option>
                </select>
                <span asp-validation-for="CategoriaPasajero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br>
            </div>
            <div class="form-group">
                <input type="submit" value="Reservar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

